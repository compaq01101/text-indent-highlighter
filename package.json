{
	"name": "text-indent-highlighter",
	"displayName": "Text Indent Highlighter",
	"description": "Highlights text based on indentation levels with different colors in VS Code.",
	"version": "0.0.7",
	"publisher": "KJW",
	"engines": {
	  "vscode": "^1.91.0"
	},
	"categories": [
	  "Other",
	  "Formatters",
	  "Linters"
	],
	"activationEvents": [
	  "onLanguage:plaintext"
	],
	"main": "./dist/extension.js",
	"repository": {
	  "type": "git",
	  "url": "https://github.com/compaq01101/text-indent-highlighter"
	},
	"icon": "main.png",
	"keywords": [
	  "indentation",
	  "highlight",
	  "text",
	  "color",
	  "vscode",
	  "plaintext",
	  "syntax",
	  "code",
	  "editor",
	  "style",
	  "visual",
	  "file",
	  "document",
	  "programming",
	  "developer",
	  "productivity"
	],
	"scripts": {
	  "vscode:prepublish": "npm run package",
	  "compile": "webpack",
	  "watch": "webpack --watch",
	  "package": "webpack --mode production --devtool hidden-source-map",
	  "compile-tests": "tsc -p . --outDir out",
	  "watch-tests": "tsc -p . -w --outDir out",
	  "pretest": "npm run compile-tests && npm run compile && npm run lint",
	  "lint": "eslint src --ext ts",
	  "test": "vscode-test"
	},
	"contributes": {
	  "configuration": {
		"type": "object",
		"title": "Text Indent Highlighter",
		"properties": {
		  "textIndentHighlighter.colors": {
			"type": "array",
			"description": "List of colors for indentation levels.",
			"items": {
			  "type": "string",
			  "format": "color"
			}
		  }
		}
	  }
	},
	"devDependencies": {
	  "@types/vscode": "^1.91.0",
	  "@types/mocha": "^10.0.7",
	  "@types/node": "20.x",
	  "@typescript-eslint/eslint-plugin": "^7.14.1",
	  "@typescript-eslint/parser": "^7.11.0",
	  "eslint": "^8.57.0",
	  "typescript": "^5.4.5",
	  "ts-loader": "^9.5.1",
	  "webpack": "^5.92.1",
	  "webpack-cli": "^5.1.4",
	  "@vscode/test-cli": "^0.0.9",
	  "@vscode/test-electron": "^2.4.0"
	}
}
